{
  "name": "gltf-type-toolkit",
  "type": "module",
  "version": "1.0.0-rc.0",
  "packageManager": "pnpm@9.15.4",
  "description": "This plugin generates type-safe GLTF file representations in TypeScript and optimizes the loading and bundling of models in web projects, while being bundler-agnostic (Vite, Rollup, Webpack, esbuild, Rspack, ...).",
  "author": "Thorsten Seyschab <business@todde.tv> (https://todde.tv/)",
  "contributors": [
    {
      "name": "Thorsten Seyschab",
      "email": "business@todde.tv",
      "url": "https://todde.tv/"
    },
    {
      "name": "Andreas Fehn",
      "url": "https://github.com/fehnomenal"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/toddeTV/gltf-type-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toddeTV/gltf-type-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/toddeTV/gltf-type-toolkit/issues"
  },
  "keywords": [
    "typescript",
    "webpack",
    "web",
    "generator",
    "rollup",
    "farm",
    "three-js",
    "threejs",
    "gltf",
    "gltf2",
    "rolldown",
    "vite",
    "esbuild",
    "rspack"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./astro": {
      "import": "./dist/astro.js",
      "require": "./dist/astro.cjs"
    },
    "./rspack": {
      "import": "./dist/rspack.js",
      "require": "./dist/rspack.cjs"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./webpack": {
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    },
    "./rollup": {
      "import": "./dist/rollup.js",
      "require": "./dist/rollup.cjs"
    },
    "./esbuild": {
      "import": "./dist/esbuild.js",
      "require": "./dist/esbuild.cjs"
    },
    "./nuxt": {
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    },
    "./farm": {
      "import": "./dist/farm.js",
      "require": "./dist/farm.cjs"
    },
    "./types": {
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md",
    "dist",
    "package.json"
  ],
  "engines": {
    "node": "22",
    "pnpm": "9"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "build:post": "esno scripts/postbuild.ts",
    "lint": "eslint .",
    "lint:fix": "run-s \"lint --fix\"",
    "playground": "pnpm -C playground run dev"
  },
  "peerDependencies": {
    "@farmfe/core": ">=1",
    "@nuxt/kit": "^3",
    "@nuxt/schema": "^3",
    "esbuild": "*",
    "rollup": "^3 || ^4",
    "three": "^0.170.0",
    "vite": ">=3",
    "webpack": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@farmfe/core": {
      "optional": true
    },
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "@antfu/eslint-config": "~3.16.0",
    "@types/node": "~22.10.7",
    "@types/three": "~0.172.0",
    "eslint": "~9.18.0",
    "eslint-plugin-format": "~1.0.1",
    "eslint-plugin-perfectionist": "~4.7.0",
    "esno": "~4.8.0",
    "fast-glob": "~3.3.3",
    "npm-run-all2": "~7.0.2",
    "tsup": "~8.3.5",
    "typescript": "~5.7.3",
    "unplugin": "~2.1.2"
  }
}
